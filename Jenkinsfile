pipeline{    agent any    stages{        stage('build'){            //mvn构建            steps{                //sh 'export PATH="/var/jenkins_home/apache-maven-3.6.1/bin:${PATH}'                sh "ls -la"                sh "pwd"                sh "/var/jenkins_home/apache-maven-3.6.1/bin/mvn clean install -Dmaven.test.skip=true"            }        }        stage('deploy'){            steps{                //执行部署脚本                echo "deploy ......"            }        }    }    post {        always {            echo 'This will always run'        }        success {            echo 'This will run only if successful'        }        failure {            echo 'This will run only if failed'        }        unstable {            echo 'This will run only if the run was marked as unstable'        }        changed {            echo 'This will run only if the state of the Pipeline has changed'            echo 'For example, if the Pipeline was previously failing but is now successful'        }    }}